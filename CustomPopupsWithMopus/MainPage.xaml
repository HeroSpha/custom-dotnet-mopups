<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CustomPopupsWithMopus.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:CustomPopupsWithMopus.ViewModels"
    x:DataType="viewModels:MainPageViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Button Command="{Binding OpenPopupCommand}" Text="Open popup" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
